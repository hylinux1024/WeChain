<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--透明渐变的TabView-->
    <declare-styleable name="AlphaTabView">
        <attr name="tabIconNormal" format="reference" />
        <attr name="tabIconSelected" format="reference" />
        <attr name="tabText" format="string" />
        <attr name="tabTextSize" format="dimension" />
        <attr name="textColorNormal" format="color" />
        <attr name="textColorSelected" format="color" />
        <attr name="badgeBackgroundColor" format="color" />
        <attr name="paddingTexwithIcon" format="dimension"/>
    </declare-styleable>

    <!--linear list item-->
    <declare-styleable name="LinearItemLayout">
        <attr name="itemTitle" format="reference" />
        <attr name="itemRightText" format="reference" />
        <attr name="itemIcon" format="reference" />
    </declare-styleable>

    <declare-styleable name="UserInfoBarLayout">
        <attr name="userName" format="string|reference" />
        <attr name="userId" format="string|reference" />
        <attr name="userIcon" format="reference" />
        <attr name="qrCodeIcon" format="reference" />
    </declare-styleable>
</resources>